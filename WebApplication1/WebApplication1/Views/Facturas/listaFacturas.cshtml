@model System.Data.DataTable
@{
    ViewBag.Title = "listaFacturas";
}

<!DOCTYPE html>
<html>
<head>
    <title>Lista Facturas</title>
</head>

<body>
    <h2>Lista De Facturas</h2>

    <!--Cargue del metodo-->
    @using (Html.BeginForm("filtrarFacturas", "Facturas"))
    {
        <table class="table table-bordered table-striped">

            <tr>
                <td>
                    Ventas del dia:@Html.TextBox("datoBuscar")
                </td>
                <td>
                    <input style="text-align:right" type="submit" name="name" value="Buscar" />
                </td>
            </tr>
        </table>

    }

    <!--Tabla-->
    <table class="table table-bordered table-striped">
        <tr>
            <th>Id.Factura</th>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>@Model.Rows[i][0]</td>
                <td>@Model.Rows[i][1]</td>
                <td>@Model.Rows[i][2]</td>
                <td>
                    <a href="@Url.Action("AgregarProductos", "Facturas", new { IdFactura = Model.Rows[i][0] })" class="btn btn-primary">Agregar Productos</a>
                    <a href="@Url.Action("EliminarFacturas", "Facturas", new { IdFactura = Model.Rows[i][0] })" class="btn btn-danger">Eliminar Factura</a>
                    <a href="@Url.Action("VerFacturas", "Facturas", new { IdFactura = Model.Rows[i][0] })" class="btn btn-primary">Ver Factura</a>
                </td>
            </tr>
        }
    </table>
    <!--Otras pestañas-->
    <div class="card-footer">
        <div class="d-flex justify-content-center links">
            <a href="@Url.Action("RegistrarFactura","Facturas")">Registrar Factura</a>
        </div>
    </div>

</body>
</html>