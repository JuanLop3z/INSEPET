
@{
    ViewBag.Title = "AgregarProductos";
}

<!DOCTYPE html>

<html>

<head>
    <title>INSEPET</title>
</head>

<body>
    <h2>INSEPET</h2>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Agregar Productos a Factura</h3>
                </div>
                <div class="card-body">
                    <!--Metodo a ejecutar-->
                    <form action="@Url.Action("AgregarProductos","Facturas")" method="post">

                        <!-- Campo oculto para el IdFactura -->
                        <input type="hidden" name="IdFactura" value="@Request.QueryString["IdFactura"]" />

                        <!--Campos de escritura-->
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" name="IdProducto" class="form-control" placeholder="Id del productos">
                        </div>


                        <!--Lanzador de alerta-->
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>

                        }

                        <!--Buttons-->
                        <div class="form-group">
                            <input type="submit" value="Agregar Producto" class="btn float-right login_btn">
                        </div>
                        <div class="form-group">
                            <input type="reset" value="Borrar" class="btn float-left cancel_btn">
                        </div>
                    </form>
                </div>
            </div>

            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    <a href="@Url.Action("ListarProductos","Productos")">Ver lista de Productos</a>
                </div>
            </div>

            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    <a href="@Url.Action("listaFacturas","Facturas")">Facturas Hechas</a>
                </div>
            </div>

        </div>
    </div>


    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>
